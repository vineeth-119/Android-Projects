        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IEEE is the world's largest technical professional organization dedicated to advancing technology for the benefit of humanity and our college has a small part of it"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:padding="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:padding="20sp"
        android:text="Admin: Lahari"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact: 7993456660"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"/>

